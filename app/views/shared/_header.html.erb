<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="custom-bootstrap-menu" class="navbar navbar-default" role="navigation">
      <div class="container">
          <div class="navbar-header"><%= link_to "Andrés Duarte M.", root_path, class: "navbar-brand" %>
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
              </button>
          </div>
          <div class="collapse navbar-collapse navbar-menubuilder">
              <ul class="nav navbar-nav navbar-left">
                <li><%= link_to "Posts", posts_path %></li>

                <% @categories.each do |category| %>
                  <li><%= link_to category.name, category %></li>
                <% end %>

                <% if user_signed_in? %>
                  <li><%= link_to "Dashboard", '/dashboard' %></li>
                  <li><%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><a href="<%= new_user_session_path %>"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Iniciar sesión</a></li>
                <% end %>
              </ul>
          </div>
      </div>
  </div>